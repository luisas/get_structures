{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/msa/master/assets/schema_input.json",
    "title": "nf-core/msa pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "id": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "id/sample name must be provided and cannot contain spaces"
            },
            "db": {
                "type": "string"
            }
        },
        "required": ["id", "db"]
    }
}
